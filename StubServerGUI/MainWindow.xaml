<Window
    x:Class="StubServerGUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StubServerGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Button Command="{Binding StartServerCommand}">Start</Button>
            <TextBlock Text="Uri" />
            <TextBox Text="{Binding Uri}" />
            <TextBlock Text="Status" />
            <TextBox Text="{Binding ResponseStatus}" />
            <TextBlock Text="Header" />
            <TextBox Text="{Binding ResponseHeader}" />
            <TextBlock Text="Cookie" />
            <TextBox Text="{Binding ResponseCookie}" />
            <TextBlock Text="Body" />
            <TextBox Text="{Binding ResponseBody}" />
            <TextBlock Text="File" />
            <TextBox Text="{Binding ResponseBodyFilePath}" />
            <TextBlock Text="JavaScript" />
            <wpf:WebView2
                x:Name="JavaScriptWebView"
                Height="300"
                NavigationStarting="JavaScriptWebView_NavigationStarting" />
        </StackPanel>

    </Grid>
</Window>
